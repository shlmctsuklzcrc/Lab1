#include <stdio.h>
#include <stdlib.h>

int main()
{
    SetConsoleOutputCP(1251);
    SetConsoleCP(1251);
    float t1,t2,t3;
    printf("Введіть час(в годинах) за який кожен гість з'їдає пиріг\n");
    scanf("%f %f %f",&t1,&t2,&t3);
    float t = 1/t1 + 1/t2 + 1/t3;
    float th =1/t;
    printf("Гостям потрібно %.2f години щоб з'їсти весь пиріг",th);
    return 0;
}
